<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="sombreamentoParaTexto">
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="textoClaro" parent="@style/sombreamentoParaTexto">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23dp</item>
    </style>
    
    <style name="textoCronometro" parent="@style/sombreamentoParaTexto">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/fundo_gradiente_cronometro</item>
        <item name="android:textSize">34dp</item>
    </style>
    
    <style name="textoEscuro" parent="@style/sombreamentoParaTexto">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
    </style>
    
    <style name="textoCalculoRaio" parent="@style/sombreamentoParaTexto">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">34dp</item>
    </style>

    
</resources>